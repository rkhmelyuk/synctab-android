<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="4dp"/>

            <padding android:top="@dimen/register_button_top_margin" android:bottom="@dimen/register_button_bottom_margin"
                     android:left="@dimen/register_button_side_margin" android:right="@dimen/register_button_side_margin"/>

            <gradient android:startColor="@color/register_button_pressed_gradient_start"
                      android:endColor="@color/register_button_pressed_gradient_end"
                      android:angle="270" android:type="linear"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <stroke android:width="2dp" android:color="@color/custom_button_focus_border"
                    android:topLeftRadius="2dp" android:topRightRadius="2dp"
                    android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp"/>

            <corners android:radius="4dp"/>

            <padding android:top="@dimen/register_button_top_margin" android:bottom="@dimen/register_button_bottom_margin"
                     android:left="@dimen/register_button_side_margin" android:right="@dimen/register_button_side_margin"/>

            <gradient android:startColor="@color/register_button_gradient_start"
                      android:endColor="@color/register_button_gradient_end"
                      android:angle="270" android:type="linear"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="4dp"/>

            <padding android:top="@dimen/register_button_top_margin" android:bottom="@dimen/register_button_bottom_margin"
                     android:left="@dimen/register_button_side_margin" android:right="@dimen/register_button_side_margin"/>

            <gradient android:startColor="@color/register_button_gradient_start"
                      android:endColor="@color/register_button_gradient_end"
                      android:angle="270" android:type="linear"/>
        </shape>
    </item>

</selector>