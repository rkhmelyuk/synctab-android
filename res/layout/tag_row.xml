<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/TagRowLayout">

    <TextView android:layout_height="fill_parent"
              android:layout_width="wrap_content"
              android:layout_weight="1"
              android:id="@+id/tag_name"
              android:textSize="@dimen/tag_size"
              android:textColor="@android:color/black"
              android:singleLine="true"/>

    <LinearLayout android:gravity="center"
                  android:orientation="horizontal"
                  android:layout_height="fill_parent"
                  android:layout_width="wrap_content">

        <ImageButton android:id="@+id/rename"
                     style="@style/ItemButton"
                     android:src="@drawable/edit_item_button"/>

        <ImageButton android:id="@+id/remove"
                     style="@style/ItemButton"
                     android:src="@drawable/remove_item_button"/>
    </LinearLayout>

</LinearLayout>