<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference android:key="CURRENT_TAG"
                    android:title="@string/current_tag"
                    android:summary="@string/current_tag_summary"/>

    <Preference android:title="@string/edit_tags"
                android:summary="@string/edit_tags_summary"/>

    <ListPreference android:key="REFRESH_PERIOD"
                    android:title="@string/refresh_interval"
                    android:summary="@string/refresh_interval_summary"
                    android:defaultValue="60000"
                    android:entries="@array/refreshIntervals"
                    android:entryValues="@array/refreshIntervalValues"/>

    <CheckBoxPreference android:key="SHOW_SHARING_STATUS"
                        android:title="@string/show_sharing_status"
                        android:summary="@string/show_sharing_status_summary"
                        android:defaultValue="false"/>

</PreferenceScreen>